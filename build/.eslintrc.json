{
    "env":           {
        "commonjs": true,
        "es6":      true,
        "node":     true
    },
    "extends":       [
        "../.eslintrc.json",
        "plugin:node/recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "plugins":       [ "node", "@typescript-eslint" ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules":         {
        "node/no-unpublished-require":        "off",
        "@typescript-eslint/no-var-requires": "off"
    }
}
